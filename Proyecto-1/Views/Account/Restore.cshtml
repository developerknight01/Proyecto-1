@{
    Layout = null;
    ViewData["Title"] = "Recuperar Perfil";
}
<section class="inputRestorePass replace">
    <span class="btnBackLogin"><i class="fa-solid fa-chevron-left"></i></span>
    <h5>Recuperar contraseña - Paso 1 - 2</h5>
    <aside class="row">
        <label>Cédula</label>
        <input type="number" class="tbId" placeholder="Cédula: #########" autocomplete="off">
    </aside>
    <label class="lbErrorPass">Correo no existe</label>
    <button class="btnSend" onclick="sendRestorePass()">Enviar</button>
</section>
<section class="inputNewPassword inactive">
    <span class="btnBackLogin"><i class="fa-solid fa-chevron-left"></i></span>
    <h5>Recuperar contraseña - Paso 2 - 2</h5>
    <aside class="row">
        <label>Código de Recuperación</label>
        <input type="text" class="tbCodeRestore" placeholder="Código de recuperación" autocomplete="off">
    </aside>
    <aside class="row">
        <label>Contraseña nueva</label>
        <input type="password" class="tbNewPass" placeholder="Contraseña" autocomplete="off">
    </aside>
    <aside class="row">
        <label>Confirmación de contraseñas</label>
        <input type="password" class="tbConfirmPass" placeholder="Confirmar contraseña" autocomplete="off">
    </aside>
    <label class="lbErrorPass">Contraseñas no coinciden</label>
    <button class="btnRestore" onclick="restorePass()">Actualizar</button>
</section>